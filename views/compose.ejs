    <h1>Compose</h1>

    <form method="post">
        <div class="form-group">
            <label for="post-title" class="form-label">Title</label>
            <input type="text" class="form-control" name="postTitle" id="postTitle">

            <label for="post-content" class="form-label">Post</label>
            <textarea rows="5" class="form-control" placeholder="Start Writing from here" name="postContent" id="post-content"></textarea>
        </div>
        <button class="btn" type="submit">Publish</button>
    </form>

